<div class="navbar-ac-transparent">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-ac-brand" do %>
<%= image_tag "ahoy-logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-ac-right hidden-xs hidden-sm">

  <div class="menu">
        <ul>
          <li>
            <%= link_to root_path do %>
            HOME
            <% end %>
          </li>
          <li>
            <%= link_to portfolio_index_path do %>
            PORTFOLIO
            <% end %>
          </li>
        </ul>
      </div>

    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Contact us"), "#contact", class: "navbar-ac-item navbar-ac-button navbar-ac-button-white" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-ac-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-ac-dropdown-menu">
        <li>
            <%= link_to portfolio_index_path do %>
            Portfolio
            <% end %>
          </li>
        <li><a href="#contact">Contact us</a></li>
      </ul>
    </div>
  </div>
</div>

